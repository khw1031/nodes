{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
